<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorBack"
    tools:context=".choiseOfDomain">

    <LinearLayout
        android:id="@+id/banner_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        tools:ignore="MissingConstraints" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <androidx.cardview.widget.CardView
            android:id="@+id/cultureBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:layout_marginLeft="50dp"
            android:background="#00FFFFFF"
            android:foreground="@drawable/takafama"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            android:onClick="OnClickCulture"
            tools:ignore="OnClick" />

        <androidx.cardview.widget.CardView
            android:id="@+id/islamBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:layout_marginLeft="20dp"
            android:background="#00FFFFFF"
            android:foreground="@drawable/dinlogo"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            android:onClick="OnClickIslam"
            tools:ignore="OnClick" />

        <androidx.cardview.widget.CardView
            android:id="@+id/sportBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:layout_marginLeft="50dp"
            android:background="#00FFFFFF"
            android:foreground="@drawable/spor"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            android:onClick="OnClickSport"
            tools:ignore="OnClick" />

        <androidx.cardview.widget.CardView
            android:id="@+id/awasimBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:layout_marginLeft="20dp"
            android:background="#00FFFFFF"
            android:foreground="@drawable/awasim"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            android:onClick="OnClickAwasim"
            tools:ignore="OnClick" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>